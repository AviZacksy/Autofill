{
  "manifest_version": 3,
  "name": "Booking Auto Fill",
  "version": "1.1",
  "description": "Auto-fills booking form inside cross-origin iframe",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://custom-pages.zipr.in/*",
    "https://booking.forestrajasthan.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://custom-pages.zipr.in/*",
        "https://booking.forestrajasthan.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["xlsx.full.min.js", "debug.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
